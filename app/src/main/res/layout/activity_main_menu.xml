<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_battlefield"
        tools:context=".controller.MainMenuActivity">

    <TextView
            android:text="Game of"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:paddingTop="20dp"
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textFontWeight="bold"
            android:shadowRadius="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Tic Tac Thrones"
            android:elevation="8dp"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:textFontWeight="bold"
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subHeaderTextView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/headerTextView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <fragment
            android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:id="@+id/mainmenu_fragment"
            android:name="com.example.tictactoe.controller.MainMenuFragment"
            tools:layout="@layout/fragment_main_menu"
              />

</android.support.constraint.ConstraintLayout>