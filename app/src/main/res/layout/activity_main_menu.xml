<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_battlefield"
        tools:context=".controller.MainMenuActivity">

    <TextView
            android:id="@+id/headerTextView"
            android:text="Game of"
            style="@style/got_font"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/subHeaderTextView"
            android:text="Tic Tac Thrones"
            style="@style/got_font"
            app:layout_constraintTop_toBottomOf="@+id/headerTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <fragment
            android:id="@+id/mainmenu_fragment"
            android:name="com.example.tictactoe.controller.MainMenuFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_main_menu"
    />

</android.support.constraint.ConstraintLayout>