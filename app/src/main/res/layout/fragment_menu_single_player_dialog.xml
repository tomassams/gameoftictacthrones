<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".controller.MenuSinglePlayerDialog">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/singlePlayerNameEditText"
                android:hint="Your name"
                android:textAlignment="center"/>
        <TextView
                android:text="Select your seed to start"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/selectSeedText"
                android:textAlignment="center" android:paddingVertical="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pickCircleBtn" android:layout_weight="1"/>
            <Button
                    android:text="Cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pickCrossBtn" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>